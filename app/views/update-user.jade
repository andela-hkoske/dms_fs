md-dialog.update-user(aria-label='Update User')
    md-toolbar
      .md-toolbar-tools
        h2(flex) Update User
        md-button(ng-click='cancel()')
          md-tooltip Close
          i.fa.fa-lg.fa-times-circle
    md-dialog-content.dialog-body.md-padding(layout='column')
      .fit(layout='row')
        i.fa.fa-user.fa-2x.icon
        md-input-container.md-padding(flex)
          input(type='text' ng-required='true' ng-model='user.name.first' placeholder='First Name')
      .fit(layout='row')
        i.fa.fa-user.fa-2x.icon
        md-input-container.md-padding(flex)
          input(type='text' ng-required='true' ng-model='user.name.last'  placeholder='Last Name')
      .fit(layout='row')
        i.fa.fa-at.fa-2x.icon
        md-input-container.md-padding(flex)
          input(type='email' ng-required='true' ng-model='user.email'  placeholder='Email')
      .fit(layout='row')
        i.fa.fa-user-secret.fa-2x.icon
        md-input-container.md-padding(flex)
          input(type='text' ng-required='true' ng-model='user.username' placeholder='Username')
      .fit(layout='row')
        i.fa.fa-key.fa-2x.icon
        md-input-container.md-padding(flex)
          input(type='password' ng-required='true' ng-model='user.password' placeholder='Password')
      .fit(layout='row' ng-if='roles')
        i.fa.fa-lock.fa-2x.icon
        md-select.md-padding.md-margin(ng-model="user.role._id" ng-required='true' placeholder='Role' flex)
            md-option(ng-repeat="role in roles" value="{{role._id}}")
              | {{role.title}}
      div(layout='row' layout-align='center center')
        p.md-padding.link {{message}}
      md-button.md-raised.md-primary.button(ng-click='update()')
        p.md-title Update
