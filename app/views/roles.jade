md-dialog.update-user(aria-label='Update Role')
    md-toolbar
      .md-toolbar-tools
        h2(flex) Roles
        md-button(ng-click='cancel()')
          md-tooltip Close
          i.fa.fa-lg.fa-times-circle
    md-dialog-content.types.fit(layout='column')
      .md-padding(layout='column')
        h2.list-text-1 Available
        md-list(flex)
          md-list-item.fit(ng-repeat="role in roles" flex)
            md-card.ripple-container.fit-margin(layout="row" flex md-ink-ripple ng-click='select(role)')
              div(layout='row' flex)
                h2.list-text-1(flex) {{role.title}}
                div(layout='row' layout-align='end center')
                  md-button.md-fab.md-mini.md-primary( ng-click='select(role)')
                    md-tooltip Update
                    i.fa.fa-lg.fa-wrench
                  md-button.md-fab.md-mini.md-primary( ng-click='delete(role, $event)')
                    md-tooltip Delete
                    i.fa.fa-lg.fa-trash
        h2.list-text-1 Role Title
        md-input-container.md-padding(flex)
          input(type='text' ng-required='true' ng-model='selectedRole.title')
        div(layout='row' layout-align='center center')
          p.md-padding.link {{message}}
        div(flex layout-align='center center')
          md-button.md-raised.md-primary.button(ng-click='update()')
            p.md-title Update

